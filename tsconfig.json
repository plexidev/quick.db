{
    "compilerOptions": {
        "target": "esnext",
        "module": "CommonJS",
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./out",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "allowJs": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": ["tests", "out"]
}
